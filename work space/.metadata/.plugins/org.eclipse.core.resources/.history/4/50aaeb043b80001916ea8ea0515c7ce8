package ex02_for_star;
//ºó ´ÙÀÌ¾ÆÂï±â
public class For_star4 {
		public static void main(String[] args) {
			int i,j,d;
			i=1;
			j=1;
			for(d=1;d<=4;d++) {
			     for(;d<=4;d++) {
			    	 System.out.print("*");
			    	 i++;
			    	 
			     for(;j<(i-1)*(2*i-1);j++) {
		    		 System.out.print(" ");
			    	 
			     }
			     System.out.println("");
			     }
			}
			     
		
			
			
		}

}
