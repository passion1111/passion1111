package ex02_for_star;
//ºó ´ÙÀÌ¾ÆÂï±â
public class For_star4 {
		public static void main(String[] args) {
			int j,d,a,b = 0;
			int i=0;
			d=0;
			i=d=a=b;
		
			
	for(d=1;d<=4;d++) {
			     for(;i<=4;i++) {
			    	 System.out.print("*");
			
			     }
			     for(;a<(d-1)*(2*d-1);a++) {
		    		 System.out.print(" ");
			     }
			     for(;b<4;b++) {
			    	 System.out.print("*");
			     }
			     System.out.println("");
			     i=a=d;
			     b=d-1;
	}
			     
		
			
			
		}

}
