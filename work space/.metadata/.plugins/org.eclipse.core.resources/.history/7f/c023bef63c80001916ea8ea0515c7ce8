package ex02_for_star;
//ºó ´ÙÀÌ¾ÆÂï±â
public class For_star4 {
		public static void main(String[] args) {
			int j,d;
			int i=0;
			d=0;
			i=d;
			j=1;
			for(d=1;d<=4;d++) {
			     for(;i<=4;i++) {
			    	 System.out.print("*");
			
			     }
			     for(;i<(d-1)*(2*d-1);i++) {
		    		 System.out.print(" ");
			    	 
			     }
			     for(;i<=4;i++) {
			    	 System.out.print("*");
			     }
			     System.out.println("");
			}
			     
		
			
			
		}

}
