package personal;

public class Product2 {
	int price;  //제품 가격
	int bonuspoint;//제품가격시 보너스 점수
	Product2(int price){
		this.price=price;
		bonuspoint=(int)(price/10.);
	}
	
	Product2(){
		price=0;
		bonuspoint=0;
	}
}


class Tv extends Product2{
	Tv(){
		super(100);
	}
	public String toString() {
		return "Tv";
	}
}
class Computer extends Product2{
	Computer(){
		super(200);
	}
	
	public String toString() {
		return "Computer";
	}
}

class Audio extends Product2{
	Audio(){
		super(50);
	}
	public String toStiring(){
		return "Audio";
	}
}

class Buyer{
	int money=1000;//가진돈
	int bonuspoint=0;//보너스포인트
	Product2[] item=new Product2[10];//구입한 제품을 저장하기 위한 배열
	int i=0;//product배열에 사용될 카운터

	void buy(Product2 p) {
		if(money<bonuspoint) {
			System.out.println("잔액이 부족하여 물건을 살수없습니다.");
			return;
		}
		money-=p.price;//가진돈에서 구입한 제품의 가격을 뺸다
		bonuspoint+=p.bonuspoint;
		item[i++]=p;
		System.out.println(p+"을/를 구입하셨습니다");
	}
	void summary(){
		int sum=0;
		String itemList="";
		
		//반복문을 이용해 구입한 물품의 총가격과 목록을 만든다.
		for(int i=0;i<item.length;i++) {
			if(item[i]==null)break;
			sum+=item[i].price;
			itemList+=item[i]+", ";
		}
		System.out.println("구입하신 물품의 총금액은"+sum+"만원입니다.");
		System.out.println("구입하신 물품은"+itemList+"입니다");
	}
	}

class PolyArgumentTest2{
	public static void main(String[] args) {
		Buyer b=new Buyer();
		Tv tv=new Tv();
		Computer com=new Computer();
		Audio audio=new Audio();
		b.buy(tv);
		b.buy(com);
		b.buy(audio);
		b.summary();
}
}