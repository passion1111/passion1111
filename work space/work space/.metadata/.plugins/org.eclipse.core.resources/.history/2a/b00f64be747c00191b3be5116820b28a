package personal;

public class Personal_1 {
	private static int space;
	private static int i;

	public static void main(String[] args) {
		
		for(space=1; space<5; space++)
		{
			for(i=0;i<4-space;i++) {
				System.out.print(" ");
			}
			for(i=0;i<2*space-1;i++) {
				System.out.print("*");
			}
			System.out.print("\n");
		}
	}

}
