package ex01_If;

import java.util.*;

public class Controller_if {
			public static void main(String[] args) {
				
				System.out.println("integer data input : ");
				  int su=new Scanner(System.in).next();
				  
				  
				  if(su%2==0)
				  System.out.println("짝수입니다");
				  else
					  System.out.println("홀수입니다");
			}

			
			}
}
