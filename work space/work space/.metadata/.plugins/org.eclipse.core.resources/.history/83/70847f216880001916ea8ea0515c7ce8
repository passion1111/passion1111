package ex02_for_star;

public class Personal_star10 {
	int i,j,d;
	for(d=1;d<=5;d++) {
		for(i=d;i<=5;i++)
		{System.out.print(" ");
	}
	   for(j=1;j<=2*d-1;j++)
	   {System.out.print("*");
	
}
System.out.println("");
	for(d=1;d<=5;d++) {
		for(i=d;i<=5;i++)
		{System.out.print(" ");
	}
	   for(j=1;j<=2*d-1;j++)
	   {System.out.print("*");
	
}
System.out.println("");
}

}
