package ex02_for_star;
//ºó ´ÙÀÌ¾ÆÂï±â
public class For_star4 {
		public static void main(String[] args) {
			int i,j,d;
			i=1;
			for(d=1;d<7;d++) {
			     for(i=1;i<=4;i++) {
			    	 System.out.print("*");
			    	 
			    	 }
			     for(j=1;0<(j-1)*(2*j-1);j--) {
		    		 System.out.print(" ");
			    	 
			     }
		
			}
			
			
		}

}
