package ex02_for_star;
//ºó ´ÙÀÌ¾ÆÂï±â
public class For_star4 {
		public static void main(String[] args) {
			int i,j,d;
			i=d=1;
			j=1;
			for(d=1;d<=4;d++) {
			     for(;i<=4;i++) {
			    	 System.out.print("*");
			    	 
			     }
			     for(;d<(d-1)*(2*d-1);) {
		    		 System.out.print(" ");
			    	 
			     }
			     System.out.println("");
			     
			}
			     
		
			
			
		}

}
