package ex04.While;
//이름 입력받고 점수 3개(0~100만 입력 k e c 총점 평균 구하는 프로그램 작성
//
//
//
import java.util.Scanner;

public class While04 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int sum,avg,x,y,z;

		int k=sc.nextInt();
		
		int e =sc.nextInt();
		
		int c =sc.nextInt();
		
		double avg1=0;
		System.out.println("당신의 이름 입력 요망 : ");
		String name=sc.nextLine();
		
		sum=k+e+c;
		avg1=sum/3.0;
		
		
		do {
			 k=sc.nextInt();		
			System.out.println("국어를 다시입력해주세요");		
		}while(k<0||k>101);   
		
		do {
			 e=sc.nextInt();		
			System.out.println("영어를 다시입력해주세요");		
		}while(e<0||e>101);
		do {
			 c=sc.nextInt();		
			System.out.println("전산을 다시입력해주세요");		
		}while(c<0||c>101);    
		//     
		
		System.out.println(name+"씨 ");
		System.out.println("당신의 총점은:"+sum+"\n당신의 평균은:"+avg1);
		}
		
		}

