
package day03.operator;


	//최단산쉬관논삼대콤
public class Ex01_Opearator {
	public static void main(String[] args) {
		  
		  int x= -7,y;
		  y=~x;  //비트부정 0을 비트부정하면 -1 ,부호연산바뀌고 마지막 8비트짜리가 1로바뀌기떄문
		           //비트부정1을하면 2가됨.
		System.out.println("x= "+x+ "\t =" +y);  //
		
	}

}



